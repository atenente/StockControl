<div class="d-flex justify-content-center p-2">
  <div class="login-container rounded shadow p-3 border">
    <div class="p-1 mb-1 text-center fs-3 text border">
      <%= t('.change_your_password') %>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
      <div class="form-inputs">
        <%= f.input :password,
                    required: true,
                    autofocus: true,
                    hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="d-grid">
        <%= f.button :submit, t('.change_my_password'), class: "btn btn-primaty" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
